{
    "parser": "babel-eslint",

    "extends": "eslint:recommended",

    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "comma-dangle": [
            0, // there's some bug with this rule
            "never"
        ]
    },
    "env": {
        "es6": true,
        "browser": true
    },

    "plugins": [
        "react"
    ],
    "globals": {
        // CommonJS modules
        "module": false,
        "require": false
    }
}